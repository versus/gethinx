<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css" integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title>Gethinx status page</title>
</head>
<body>
    <style>
        body {
          padding-top: 5rem;
        }
        .starter-template {
          padding: 3rem 1.5rem;
          text-align: center;
        }
        h1 {
          padding-bottom: 9px;
          margin-bottom: 20px;
          //border-bottom: 1px solid #eee;
        }

    </style>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
      <a class="navbar-brand" href="#">{{ .title }}</a>

    </nav>

    <main role="main" class="container">

      <h1>LastBlock is   <span id="averageBlock"> NaN </span></h1>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead thead-light>
                <tr>
                  <th>Status</th>
                  <th>Hostname</th>
                  <th>LastBlock</th>
                  <th>Weight</th>
                  <th>LastUpdate</th>
                </tr>
              </thead>
              <tbody id="tableUpstream">
                <tr>
                  <td><i class="material-icons">cloud_done</i></td>
                  <td>Lorem</td>
                  <td>ipsum</td>
                  <td>dolor</td>
                  <td>sit</td>
                </tr>
                <tr>
                  <td><i class="material-icons">cloud_done</i></td>
                  <td>amet</td>
                  <td>consectetur</td>
                  <td>adipiscing</td>
                  <td>elit</td>
                </tr>
                <tr>
                  <td><i class="material-icons">cloud_off</i></td>
                  <td>Integer</td>
                  <td>nec</td>
                  <td>odio</td>
                  <td>Praesent</td>
                </tr>
                <tr>
                  <td><i class="material-icons">cloud_queue</i></td>
                  <td>libero</td>
                  <td>Sed</td>
                  <td>cursus</td>
                  <td>ante</td>
                </tr>
              </tbody>
            </table>
          </div>

<pre id="output"></pre>

    </main><!-- /.container -->


	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/js/bootstrap.min.js" integrity="sha384-a5N7Y/aK3qNeh15eJKGWxsqtnX/wWdSZSKp+81YjTmS15nvnvxKHuzaWwXHDli+4" crossorigin="anonymous"></script>
        <script>
        $("#tableUpstream").empty();
          url = '{{ .ws_server }}';
          c = new WebSocket(url);

          send = function(data){
            c.send(data)
          }

          c.onmessage = function(msg){
          var obj = jQuery.parseJSON(msg.data);
            $("#output").append((new Date()) +" "+obj.upstreams[0]+"\n")
            $("#averageBlock").text(obj.LastBlockAverage)
            $("#tableUpstream").empty();
            obj.upstreams.forEach(function (item, index, array) {
                var upstream = jQuery.parseJSON(item)
                var status_img = ""
                switch (upstream.status){
                    case "active":
                        status_img = "cloud_done"
                        break;
                    case "suspend":
                        status_img = "cloud_queue"
                        break;
                    default:
                        status_img = "cloud_off"
                }
                //console.log(status_img);
                var row = $("<tr>")
                    row.append($("<td><i class=\"material-icons\">" + status_img + "</i></td>"));
                    row.append($("<td>" + upstream.hostname + "</td>"));
                    row.append($("<td>" + upstream.digblock + "</td>"));
                    row.append($("<td>" + upstream.weight + "</td>"));
                    row.append($("<td>" + upstream.lastupdate + "</td>"));
                    row.append($("</tr>"));
                    $("#tableUpstream").append(row);

            });
          }

          c.onopen = function(){
            setInterval(
              function(){ send("status") }
            , 10000 )
          }
        </script>
</body>
</html>